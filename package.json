    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.5",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-boundaries": "^5.1.0",
    "eslint-plugin-check-file": "^3.3.0",
